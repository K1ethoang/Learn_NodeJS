<div class="mt-4">
  <h3>Đăng khoá học</h3>
  <a href="/me/stored/courses">Danh sách khoá học</a>
</div>

<form method="POST" action="/courses/store">
  <div class="form-group">
    <label for="name">Tên khoá học</label>
    <input type="text" class="form-control" id="name" name="name" />
  </div>
  <div class="form-group">
    <label for="description">Mô tả</label>
    <textarea class="form-control" id="description" name="description"></textarea>
  </div>
  <div class="form-group">
    <label for="videoId">Video id</label>
    <input type="text" class="form-control" id="videoId" name="videoId" />
  </div>
  <div class="form-group">
    <label for="level">Trình độ</label>
    <input type="text" class="form-control" id="level" name="level" />
  </div>

  <button type="submit" class="btn btn-primary">Đăng khoá học</button>
</form>